                }

                $form['#info']["filter-$key"]['label'] = '';
            }
        }
    }

    if(strpos($form['#id'], 'views-exposed-form-civihr-report-') !== false) {
        foreach ($form as $key => $value) {
          if (isset($form[$key]['value'])) {
