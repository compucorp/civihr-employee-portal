            'wrapper' => 'report-replace-div',
            'method' => 'replace',
            'effect' => 'fade',
            'progress' => array('type' => 'none')
        );

        // Autosubmit the form on page load as views autosubmit doesn't pass values of contextual filters to inserted view in Global : View Area
        drupal_add_js(
