            // Cache the Appraisal cycle types for 5 minutes
            cache_set('civihr_appraisal_cycle_types', $appraisalCycleTypes, 'cache', time() + 360);
        }
    }

    if ($type_id === null) {
        return '-';
    }

    // Get the type values based on the type_id
    $type_value = $appraisalCycleTypes[$type_id];

    return $type_value;
