function civihr_employee_portal_user_login(&$edit, $account) {

  if (!isset($_POST['form_id']) || $_POST['form_id'] != 'user_pass_reset') {
    $sspEntryPath = 'dashboard';
    $civicrmEntryPath = 'civicrm/tasksassignments/dashboard#/tasks';
