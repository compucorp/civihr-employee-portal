  if ($canEdit) {
    $result = null;

    if ($id) {
      $result = db_update('reports_settings_age_group')
        ->fields([
          'age_from' => (int)$form_state['values']['age_from'],
          'age_to' => (int)$form_state['values']['age_to'],
